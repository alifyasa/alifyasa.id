---
const { title } = Astro.props;
import NavbarBase from "../components/NavbarBase.astro"
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@1&display=swap" rel="stylesheet"> 
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet"> 
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet"> 
    <title>Alif Yasa | { title }</title>
  </head>
  <body class="font-satoshi bg-light-gray text-deep-black">
    <header>
      <NavbarBase />
    </header>
    <main class="absolute top-14 px-3.5 py-7 sm:p-7 sm:pb-14 w-full md:w-4/5 text-xl">
      <article>
        <h1 class="text-4xl font-medium pb-3.5">{title}</h1>
        <section>
          <slot />
        </section>
      </article>  
    </main>    
  </body>
</html>