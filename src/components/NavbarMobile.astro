<div class="flex flex-col w-full">
    <div class="flex justify-end px-3.5 h-16 z-10">
        <div class="mr-auto flex items-center">
            <a
                href="/"
                class="font-semibold py-1 px-3 text-background bg-text hover:bg-gradient-to-r hover:from-primary hover:to-accent"
                >ALIF YASA</a
            >
        </div>
        <button class="my-auto" id="navbar-mobile-button">
            <img 
                id="navbar-mobile-icon-menu" 
                src="/icons/menu.svg" 
                class="size-7"
            />
            <img 
                id="navbar-mobile-icon-expand_less" 
                src="/icons/expand_less.svg" 
                class="size-7 hidden"
            />
        </button>
    </div>
    <ul
        id="navbar-mobile-dropdown"
        class="hidden flex-col text-lg absolute top-16 w-full shadow bg-background"
    >
        <li class="flex h-14">
            <a class="flex items-center w-full px-4 active:text-accent" href="/projects/">Projects</a>
        </li>
    </ul>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const navbarButton = document.getElementById("navbar-mobile-button");
        const navbarIconExpandLess = document.getElementById("navbar-mobile-icon-expand_less");
        const navbarIconMenu = document.getElementById("navbar-mobile-icon-menu");
        const dropdown = document.getElementById("navbar-mobile-dropdown");
        let navbarExpanded = false;

        const toggleExpandNavbar = () => {
            if (navbarIconMenu && navbarIconExpandLess) {
                navbarExpanded = !navbarExpanded;
                if (navbarExpanded) {
                    dropdown?.classList.remove("hidden");
                    navbarIconMenu.classList.add("hidden");
                    navbarIconExpandLess.classList.remove("hidden");
                } else {
                    dropdown?.classList.add("hidden");
                    navbarIconMenu.classList.remove("hidden");
                    navbarIconExpandLess.classList.add("hidden");
                }
            }
        };

        navbarButton?.addEventListener("click", toggleExpandNavbar);
    });
</script>
